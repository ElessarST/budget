<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="@dimen/height_standard"
android:layout_gravity="center_vertical"
android:orientation="vertical"
android:paddingStart="@dimen/padding_72"
android:paddingEnd="@dimen/padding_medium"
android:foreground="?android:attr/selectableItemBackground"
android:clickable="true">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_standard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/category_spending"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text.16"/>
            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text.12"
                android:text="@string/rest"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/left_for_spending"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text.16"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text.12"
                android:text="@string/left"/>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>


</FrameLayout>